{% extends 'base.html.twig' %}

{% block title %}Réalisations{% endblock %}

{% block body %}

<div class="hero v-h-full overlay">
    <div class="img-bg rellax">
        <img src="images/hero_1.jpg" alt="Image" class="img-fluid">
    </div>
    <div class="container">
        <div class="row align-items-center v-h-full">

            <div class="col-lg-7 col-xxl-6 mx-auto text-center">
                <h1 class="heading-2 text-white mb-3" data-aos="fade-up">Mes réalisations</h1>
                <p data-aos="fade-up" data-aos-delay="200" class="text-white lead mb-4">Lorem ipsum dolor sit amet consectetur adipisicing elit. Perferendis quis molestiae vitae eligendi at.</p>
                <p data-aos="fade-up" data-aos-delay="300"><a href="{{ path('app_contact')}}" class="btn btn-primary-outline white me-4">Contactez moi</a></p>
            </div>

        </div>
    </div>

</div>

<div class="row">
    <div class="container-fluid">
      <div class="row m-5">

        {% for paint in paints %}
          <div class="col-md-6 col-lg-4" data-aos="fade-up" data-aos-delay="200">
            <a href="{{ path('app_realization_detail', {'id': paint.id}) }}" class="media-1">
              <img src="{{ vich_uploader_asset(paint, 'imageFile')}}" alt="Image" class="img-fluid">
              <div class="media-1-content">
                <h2>{{paint.name}}</h2>
                <span class="category">{{paint.description}}</span>
              </div>
            </a>
          </div>
        {% endfor %}
      </div>
      <div class="d-flex justify-content-center">
        {% do paints.setPageRange(3) %}
        {{ knp_pagination_render(paints, 'layout/pagination.html.twig') }}
      </div>
    </div>
  </div>


{% endblock %}

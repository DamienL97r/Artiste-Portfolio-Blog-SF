{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}
<div class="hero v-h-full overlay">
    <div class="img-bg rellax">
        <img src="../images/hero-2-min.jpg" alt="Image" class="img-fluid">
    </div>
    <div class="container">
        <div class="row align-items-center v-h-full">

            <div class="col-lg-7 col-xxl-6 mx-auto text-center">
                <h1 class="heading-2 text-white mb-3" data-aos="fade-up">{{ article.title }}</h1>
                <p data-aos="fade-up" data-aos-delay="200" class="text-white lead mb-4">{{ article.content }}</p>
                <p data-aos="fade-up" data-aos-delay="300"><a href="#" class="btn btn-primary-outline white me-4">Get in Touch</a></p>
            </div>

        </div>
    </div>

</div>




<div class="section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="row">
                    <div class="col-6 col-lg-6" data-aos="fade-up" data-aos-delay="200">
                        <a href="../images/hero-2-min.jpg" class="media-1 glightbox">
                            <img src="../images/hero-2-min.jpg" alt="Image" class="img-fluid">
                        </a>
                    </div>
                    
                </div>
            </div>
            <div class="col-lg-6 pe-lg-5" data-aos="fade-up">
                <span class="subheading d-inline-block mb-2">{{ article.slug }}</span>
                <h2 class="mb-4">{{ article.title }}</h2>
                <p class="mb-5">{{ article.content }}</p>
                <p class="mb-5">Publié le {{ article.createdAt|date("d/m/Y") }}</p>
                <p><a href="#" class="btn btn-black">Get started</a></p>
            </div>
        </div>
        <p class="mb-0"><a href="{{ path('app_blogpost')}}" class="more">Retour à la liste</a></p>
    </div>
</div>


{% endblock %}

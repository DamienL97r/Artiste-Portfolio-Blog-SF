{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
<div class="hero v-h-full overlay">
    <div class="img-bg rellax">
        <img src="images/hero-2-min.jpg" alt="Image" class="img-fluid">
    </div>
    <div class="container">
        <div class="row align-items-center v-h-full">

            <div class="col-lg-7 col-xxl-6 mx-auto text-center">
                <h1 class="heading-2 text-white mb-3" data-aos="fade-up">Contact</h1>
                <p data-aos="fade-up" data-aos-delay="200" class="text-white lead mb-4">Lorem ipsum dolor sit amet consectetur adipisicing elit. Perferendis quis molestiae vitae eligendi at.</p>
                <p data-aos="fade-up" data-aos-delay="300"><a href="#" class="btn btn-primary-outline white me-4">Salut</a></p>
            </div>

        </div>
    </div>

</div>




<div class="section section-contact m-md-5 px-md-5">
    <div class="container">
        {% for message in app.flashes('success') %}
            <div class="alert-success">
                <p>{{ message }}</p>
            </div>
        {% endfor %}
        <h2>Des questions ? Remplissez le formulaire de contact</h2>
        <p class="mb-4">Envoyez moi un message</p>

        {{ form_start(form, {'attr': {'class': 'form-contact'}}) }}
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        {{ form_row(form.completeName, {'attr': {'class': 'form-control', 'placeholder': 'ex: John Doe'}}) }}
                    </div>	
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        {{ form_row(form.email, {'attr': {'class': 'form-control', 'placeholder': 'ex: johndoe@exemple.com'}}) }}
                    </div>
                </div>
            </div>

            <div class="col-lg-12">
                <div class="form-group">
                    {{ form_row(form.subject, {'attr': {'class': 'form-control', 'placeholder': 'Objet'}}) }}
                </div>
            </div>

            <div class="col-lg-12">
                <div class="form-group">
                    {{ form_row(form.message, {'attr': {'class': 'form-control', 'placeholder': 'Votre message'}}) }}
                </div>
            </div>

            <div class="col-lg-6">
                {{ form_widget(form.envoyer, { 'attr': {'class': 'btn btn-black'} }) }}
            </div>

        {{ form_end(form) }}
    </div>	
</div>

<div class="section">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 pe-lg-5" data-aos="fade-up">
                <span class="subheading d-inline-block mb-2">We love to design</span>
                <h2 class="mb-4">Create Outstanding Website</h2>
                <p class="mb-5">Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts.</p>
                <p><a href="#" class="btn btn-black">Get started</a></p>
            </div>
            <div class="col-lg-8">
                <div class="row">
                    <div class="col-6 col-lg-6 mt-5" data-aos="fade-up" data-aos-delay="100">
                        <img src="images/img_v_5-min.jpg" alt="Image" class="img-fluid rounded">
                    </div>
                    <div class="col-6 col-lg-6" data-aos="fade-up" data-aos-delay="200">
                        <img src="images/img_v_6-min.jpg" alt="Image" class="img-fluid rounded">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}{{ category.slug }}{% endblock %}

{% block body %}
<div class="hero v-h-full overlay">
  <div class="img-bg rellax">
      <img src="../images/hero_1.jpg" alt="Image" class="img-fluid">
  </div>
  <div class="container">
      <div class="row align-items-center v-h-full">

          <div class="col-lg-7 col-xxl-6 mx-auto text-center">
              <h1 class="heading-2 text-white mb-3" data-aos="fade-up">{{ category.name }}</h1>
              <p data-aos="fade-up" data-aos-delay="200" class="text-white lead mb-4">{{ category.description }}</p>
              <p data-aos="fade-up" data-aos-delay="300"><a href="{{ path('app_contact')}}" class="btn btn-primary-outline white me-4">Contactez moi</a></p>
          </div>
      </div>
  </div>
</div>
<div class="section">
    <div class="container">
      <div class="row justify-content-center mb-5">
        <div class="col-lg-6 text-center" data-aos="fade-up" data-aos-delay="100">
          <h2 class="mb-4">{{ category.name }}</h2>
        </div>
      </div>
  
      <div class="row">
        <div class="container-fluid">
          <div class="row">

            {% for paint in paints %}
              <div class="col-md-6 col-lg-4" data-aos="fade-up" data-aos-delay="200">
                <a href="{{ path('app_realization_detail', {'id': paint.id}) }}" class="media-1">
                  <img src="../uploads/images/paints/{{ paint.file }}" alt="Image" class="img-fluid">
                  <div class="media-1-content">
                    <h2>{{paint.name}}</h2>
                    <span class="category">{{paint.description}}</span>
                  </div>
                </a>
              </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>

{% endblock %}